        pos_hint: {"center_x": 0.5, "center_y":0.37}
        size_hint: (0.9,0.1)
        padding: 25
        spacing: 25
        elevation: 15
        MDLabel:
            id: instruct
            halign: "center"
            text: "X Goes First!"
            font_size: "32sp"
            #pos_hint: {"center_y":0.35}
    
    MDRaisedButton:
        id: restart
        text: "Next Round"
